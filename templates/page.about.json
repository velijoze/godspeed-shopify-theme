{
  "sections": {
    "about_hero": {
      "type": "about-hero",
      "blocks": {
        "heading": {
          "type": "heading",
          "settings": {
            "heading": "{{ 'pages.about.heading' | t }}",
            "heading_size": "h0"
          }
        },
        "subheading": {
          "type": "subheading",
          "settings": {
            "subheading": "{{ 'pages.about.subheading' | t }}"
          }
        },
        "text": {
          "type": "text",
          "settings": {
            "text": "<p>{{ 'pages.about.description' | t }}</p>",
            "text_style": "subtitle"
          }
        }
      },
      "block_order": [
        "heading",
        "subheading", 
        "text"
      ],
      "settings": {
        "overlay_opacity": 50,
        "text_alignment": "center",
        "color_scheme": "background-1",
        "padding_top": 100,
        "padding_bottom": 100
      }
    },
    "company_story": {
      "type": "company-story",
      "blocks": {
        "story_text": {
          "type": "text",
          "settings": {
            "text": "{{ 'pages.about.story_text' | t }}",
            "text_style": "body"
          }
        },
        "highlight": {
          "type": "highlight",
          "settings": {
            "highlight_heading": "{{ 'pages.about.mission_heading' | t }}",
            "highlight_text": "{{ 'pages.about.mission_text' | t }}"
          }
        },
        "stats": {
          "type": "stats",
          "settings": {
            "stat_number": "1000+",
            "stat_label": "{{ 'pages.about.customers_label' | t }}"
          }
        }
      },
      "block_order": [
        "story_text",
        "highlight",
        "stats"
      ],
      "settings": {
        "heading": "{{ 'pages.about.our_story' | t }}",
        "heading_size": "h1",
        "image_position": "right",
        "text_alignment": "left",
        "max_width": 1000,
        "color_scheme": "background-1",
        "padding_top": 80,
        "padding_bottom": 80
      }
    },
    "main": {
      "type": "main-page",
      "settings": {
        "padding_top": 28,
        "padding_bottom": 28
      }
    }
  },
  "order": [
    "about_hero",
    "company_story",
    "main"
  ]
}