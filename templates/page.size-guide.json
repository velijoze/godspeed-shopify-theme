        "calculator_text": {
          "type": "text",
          "settings": {
            "text": "<div id='size-calculator'><h3>Schnell-Rechner</h3><div style='background: #f5f5f5; padding: 2rem; border-radius: 8px; margin: 2rem 0;'><label><strong>Ihre Körpergröße (cm):</strong></label><br><input type='number' id='height' placeholder='z.B. 175' style='width: 100%; padding: 0.5rem; margin: 0.5rem 0; border: 1px solid #ddd; border-radius: 4px;'><br><label><strong>Schrittlänge (cm):</strong></label><br><input type='number' id='inseam' placeholder='z.B. 82' style='width: 100%; padding: 0.5rem; margin: 0.5rem 0; border: 1px solid #ddd; border-radius: 4px;'><br><label><strong>E-Bike Typ:</strong></label><br><select id='bike-type' style='width: 100%; padding: 0.5rem; margin: 0.5rem 0; border: 1px solid #ddd; border-radius: 4px;'><option value='city'>City E-Bike</option><option value='trekking'>Trekking E-Bike</option><option value='mountain'>E-Mountainbike</option><option value='cargo'>Cargo E-Bike</option></select><br><button onclick='calculateSize()' style='background: #333; color: white; padding: 1rem 2rem; border: none; border-radius: 4px; margin-top: 1rem; cursor: pointer;'>Größe berechnen</button></div><div id='result' style='background: #e8f5e8; padding: 1.5rem; border-radius: 8px; margin-top: 1rem; display: none;'><h4>Empfohlene Rahmengröße:</h4><p id='size-result'></p><p id='size-advice'></p></div></div><script>function calculateSize() { const height = document.getElementById('height').value; const inseam = document.getElementById('inseam').value; const bikeType = document.getElementById('bike-type').value; let frameSize = ''; let advice = ''; if (!height || !inseam) { alert('Bitte geben Sie Körpergröße und Schrittlänge ein.'); return; } const h = parseInt(height); const i = parseInt(inseam); if (bikeType === 'city' || bikeType === 'trekking') { if (h < 160) frameSize = 'XS (44-46 cm)'; else if (h < 170) frameSize = 'S (48-50 cm)'; else if (h < 180) frameSize = 'M (52-54 cm)'; else if (h < 190) frameSize = 'L (56-58 cm)'; else frameSize = 'XL (60-62 cm)'; } else if (bikeType === 'mountain') { if (h < 160) frameSize = 'XS (38-40 cm)'; else if (h < 170) frameSize = 'S (42-44 cm)'; else if (h < 180) frameSize = 'M (46-48 cm)'; else if (h < 190) frameSize = 'L (50-52 cm)'; else frameSize = 'XL (54-56 cm)'; } else if (bikeType === 'cargo') { if (h < 165) frameSize = 'S (46-48 cm)'; else if (h < 180) frameSize = 'M (50-52 cm)'; else frameSize = 'L (54-56 cm)'; } advice = 'Diese Empfehlung basiert auf Standardwerten. Für die optimale Passform empfehlen wir eine persönliche Beratung in unserem Geschäft.'; document.getElementById('size-result').textContent = frameSize; document.getElementById('size-advice').textContent = advice; document.getElementById('result').style.display = 'block'; }</script>",
            "text_style": "body"
          }
        }
