{
  "sections": {
    "hero_pipeline": {
      "type": "hero-pipeline",
      "blocks": {
        "heading": {
          "type": "heading",
          "settings": {
            "heading": "{{ 'homepage.hero.heading' | t }}",
            "heading_size": "h0"
          }
        },
        "text": {
          "type": "text",
          "settings": {
            "text": "<p>{{ 'homepage.hero.description' | t }}</p>",
            "text_style": "subtitle"
          }
        },
        "button": {
          "type": "button",
          "settings": {
            "button_label": "{{ 'homepage.hero.button_text' | t }}",
            "button_link": "/collections/e-bikes",
            "button_style": "primary"
          }
        }
      },
      "block_order": ["heading", "text", "button"],
      "settings": {
        "image": "shopify://shop_images/maxresdefault.jpg",
        "video": "",
        "desktop_height": 700,
        "mobile_height": 500,
        "text_alignment": "center",
        "overlay_opacity": 40,
        "enable_parallax": true,
        "color_scheme": "background-1"
      }
    },
    "featured_tabs": {
      "type": "featured-collections-tabs",
      "settings": {
        "heading": "FEATURED COLLECTIONS",
        "first_collection": "e-bikes",
        "first_tab_label": "E-BIKES",
        "second_collection": "bicycles",
        "second_tab_label": "BICYCLES",
        "products_to_show": 8,
        "show_secondary_image": true,
        "show_rating": false,
        "quick_add": "none",
        "color_scheme": "background-1",
        "padding_top": 36,
        "padding_bottom": 36
      }
    },
    "newsletter": {
      "type": "newsletter",
      "blocks": {
        "heading": {
          "type": "heading",
          "settings": {
            "heading": "Stay Informed",
            "heading_size": "h1"
          }
        },
        "paragraph": {
          "type": "paragraph",
          "settings": {
            "text": "<p>Get exclusive offers, e-bike news and helpful tips delivered directly to your inbox.</p>"
          }
        },
        "email_form": {
          "type": "email_form",
          "settings": {}
        }
      },
      "block_order": ["heading", "paragraph", "email_form"],
      "settings": {
        "color_scheme": "background-1",
        "full_width": true,
        "padding_top": 40,
        "padding_bottom": 52
      }
    },
    "latest_news": {
      "type": "latest-news",
      "settings": {
        "heading": "Latest from the Blog",
        "blog": "journal",
        "limit": 6,
        "padding_top": 36,
        "padding_bottom": 36
      }
    }
  },
  "order": ["hero_pipeline", "featured_tabs", "latest_news", "newsletter"]
}
