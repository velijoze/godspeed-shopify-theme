{
  "sections": {
    "main": {
      "type": "pipeline-main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "<p>{{ product.vendor }}</p>",
            "text_style": "caption-with-letter-spacing"
          }
        },
        "title": {
          "type": "title"
        },
        "price": {
          "type": "price"
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button",
            "swatch_shape": "circle"
          }
        },
        "quantity_selector": {
          "type": "quantity_selector"
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient": true
          }
        },
        "stock_urgency": {
          "type": "custom_liquid",
          "settings": {
            "custom_liquid": "{% render 'social-proof', type: 'stock-urgency', product: product %}"
          }
        },
        "trust_badges": {
          "type": "custom_liquid",
          "settings": {
            "custom_liquid": "{% render 'pipeline-trust-badges', section: section %}"
          }
        },
        "product_accordions": {
          "type": "custom_liquid",
          "settings": {
            "custom_liquid": "{% render 'pipeline-product-accordions', section: section %}"
          }
        }
      },
      "block_order": [
        "vendor",
        "title", 
        "price",
        "variant_picker",
        "quantity_selector",
        "buy_buttons",
        "stock_urgency",
        "trust_badges",
        "product_accordions"
      ],
      "settings": {
        "enable_sticky_info": true,
        "media_size": "large",
        "gallery_layout": "stacked",
        "show_breadcrumb": true,
        "show_vendor": true,
        "show_sku": false,
        "show_payment_methods": true,
        "show_buy_now": true,
        "enable_sticky_cart": true,
        "show_dynamic_checkout": true,
        "show_features": true,
        "show_trust_badges": true,
        "show_size_guide": false,
        "show_ask_question": true,
        "enable_tabs": true,
        "show_reviews_tab": true,
        "reviews_app": "shopify",
        "show_specifications": true,
        "show_shipping": true,
        "show_care": true,
        "specifications_title": "{{ 'products.specifications' | t }}",
        "shipping_title": "{{ 'products.shipping_returns' | t }}",
        "shipping_content": "{{ 'products.shipping_content' | t }}",
        "care_title": "{{ 'products.care_title' | t }}",
        "care_content": "{{ 'products.care_content' | t }}",
        "security_title": "{{ 'products.security_title' | t }}",
        "security_text": "{{ 'products.security_text' | t }}",
        "shipping_title_badge": "{{ 'products.free_shipping' | t }}",
        "shipping_text_badge": "{{ 'products.free_shipping_threshold' | t }}",
        "guarantee_title": "{{ 'products.guarantee_title' | t }}",
        "guarantee_text": "{{ 'products.guarantee_text' | t }}",
        "payment_title": "{{ 'products.payment_title' | t }}",
        "questions_title": "{{ 'products.questions_title' | t }}",
        "questions_text": "{{ 'products.questions_text' | t }}",
        "questions_link": "/pages/contact",
        "phone_title": "{{ 'products.phone_title' | t }}",
        "phone_number": "",
        "show_info_blocks": true,
        "padding_top": 36,
        "padding_bottom": 12
      }
    },
    "related-products": {
      "type": "related-products",
      "settings": {
        "heading": "{{ 'products.you_may_like' | t }}",
        "heading_size": "h2",
        "products_to_show": 4,
        "columns_desktop": 4,
        "color_scheme": "scheme-1",
        "image_ratio": "square",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 28
      }
    },
    "image-hotspots": {
      "type": "image-hotspots-pipeline",
      "settings": {
        "heading": "Key features",
        "padding_top": 24,
        "padding_bottom": 24
      },
      "blocks": {
        "hotspot-1": { "type": "hotspot", "settings": { "title": "Motor", "text": "Powerful and efficient drive unit", "x": 35, "y": 62 } },
        "hotspot-2": { "type": "hotspot", "settings": { "title": "Battery", "text": "Longâ€‘range battery neatly integrated", "x": 55, "y": 48 } },
        "hotspot-3": { "type": "hotspot", "settings": { "title": "Brakes", "text": "Hydraulic disc brakes for confident stopping", "x": 70, "y": 70 } }
      },
      "block_order": ["hotspot-1", "hotspot-2", "hotspot-3"]
    }
  },
  "order": [
    "main",
    "image-hotspots",
    "related-products"
  ]
}