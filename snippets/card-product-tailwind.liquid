{% comment %}
  Renders a clean product card using Tailwind CSS
  
  Accepts:
  - card_product: {Object} Product Liquid object
  - show_vendor: {Boolean} Show the product vendor
  - show_rating: {Boolean} Show the product rating  
  - show_secondary_image: {Boolean} Show secondary image on hover
  - quick_add: {Boolean} Show quick add button
  
  Usage:
  {% render 'card-product-tailwind', card_product: product %}
{% endcomment %}

{%- if card_product and card_product != empty -%}
  <div class="product-card bg-white border border-primary-200 rounded-lg overflow-hidden group hover:shadow-lg transition-all duration-200">
    <div class="relative aspect-square overflow-hidden">
      {%- if card_product.featured_media -%}
        <a href="{{ card_product.url }}" class="block w-full h-full">
          <img
            src="{{ card_product.featured_media | image_url: width: 400 }}"
            alt="{{ card_product.featured_media.alt | escape }}"
            class="product-card-image w-full h-full object-cover group-hover:scale-105 transition-transform duration-200"
            loading="lazy"
            width="400"
            height="400"
          >
          
          {%- if show_secondary_image and card_product.media[1] -%}
            <img
              src="{{ card_product.media[1] | image_url: width: 400 }}"
              alt="{{ card_product.media[1].alt | escape }}"
              class="absolute inset-0 w-full h-full object-cover opacity-0 group-hover:opacity-100 transition-opacity duration-200"
              loading="lazy"
              width="400"
              height="400"
            >
          {%- endif -%}
        </a>
      {%- else -%}
        <div class="w-full h-full bg-primary-100 flex items-center justify-center">
          <svg class="w-16 h-16 text-primary-300" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
          </svg>
        </div>
      {%- endif -%}
      
      {%- if card_product.compare_at_price > card_product.price and card_product.available -%}
        <div class="absolute top-2 left-2 bg-red-500 text-white text-xs font-semibold px-2 py-1 rounded-full">
          Sale
        </div>
      {%- endif -%}
      
      {%- unless card_product.available -%}
        <div class="absolute top-2 left-2 bg-primary-600 text-white text-xs font-semibold px-2 py-1 rounded-full">
          Sold out
        </div>
      {%- endunless -%}
    </div>

    <div class="product-card-content p-4">
      {%- if show_vendor and card_product.vendor -%}
        <p class="text-sm text-primary-500 font-medium mb-1">{{ card_product.vendor }}</p>
      {%- endif -%}

      <h3 class="product-card-title text-lg font-semibold text-primary-900 mb-2 group-hover:text-primary-700 transition-colors">
        <a href="{{ card_product.url }}" class="hover:underline">
          {{ card_product.title | escape }}
        </a>
      </h3>

      {%- if show_rating and card_product.metafields.reviews.rating.value != blank -%}
        <div class="flex items-center mb-2">
          <div class="flex items-center">
            {%- assign rating_decimal = 0 -%}
            {%- assign decimal = card_product.metafields.reviews.rating.value.rating | modulo: 1 -%}
            {%- if decimal >= 0.3 and decimal <= 0.7 -%}
              {%- assign rating_decimal = 0.5 -%}
            {%- elsif decimal > 0.7 -%}
              {%- assign rating_decimal = 1 -%}
            {%- endif -%}
            {%- for i in (1..5) -%}
              {%- if card_product.metafields.reviews.rating.value.rating >= i -%}
                <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              {%- else -%}
                <svg class="w-4 h-4 text-primary-300 fill-current" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              {%- endif -%}
            {%- endfor -%}
          </div>
          <span class="ml-1 text-sm text-primary-600">({{ card_product.metafields.reviews.rating_count }})</span>
        </div>
      {%- endif -%}

      <div class="flex items-center justify-between">
        <div class="product-card-price">
          {%- if card_product.compare_at_price > card_product.price and card_product.available -%}
            <span class="text-sm text-primary-500 line-through">{{ card_product.compare_at_price | money }}</span>
            <span class="text-lg font-bold text-primary-900 ml-2">{{ card_product.price | money }}</span>
          {%- else -%}
            <span class="text-lg font-bold text-primary-900">{{ card_product.price | money }}</span>
          {%- endif -%}
        </div>

        {%- if quick_add and card_product.available -%}
          <button class="btn-primary px-3 py-2 text-sm">
            Quick Add
          </button>
        {%- endif -%}
      </div>
    </div>
  </div>
{%- else -%}
  <!-- Placeholder product card -->
  <div class="product-card bg-white border border-primary-200 rounded-lg overflow-hidden">
    <div class="aspect-square bg-primary-100"></div>
    <div class="p-4">
      <div class="h-4 bg-primary-200 rounded mb-2"></div>
      <div class="h-6 bg-primary-200 rounded mb-4"></div>
      <div class="h-4 bg-primary-200 rounded w-20"></div>
    </div>
  </div>
{%- endif -%}