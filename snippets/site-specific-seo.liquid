<!-- Swiss Market Keywords -->
{% liquid
  assign swiss_keywords = 'e-bike schweiz, elektrovelo, electric bike switzerland, nachhaltiger transport, urban mobility zurich, premium e-bikes, swiss quality'
  assign seasonal_keywords = ''
  
  assign current_month = 'now' | date: '%m' | plus: 0
  if current_month >= 3 and current_month <= 5
    assign seasonal_keywords = 'spring cycling, bike season, outdoor activity'
  elsif current_month >= 6 and current_month <= 8  
    assign seasonal_keywords = 'summer biking, vacation cycling, alpine tours'
  elsif current_month >= 9 and current_month <= 11
    assign seasonal_keywords = 'autumn cycling, commuter season, back to work'
  else
    assign seasonal_keywords = 'winter biking, all-weather cycling, indoor storage'
  endif
%}

<meta name="keywords" content="{{ swiss_keywords }}, {{ seasonal_keywords }}, {{ shop.name }}">

<!-- Competitive SEO Elements -->
<meta name="competitive-advantage" content="Swiss quality, 2-year warranty, free test rides, expert consultation, sustainable mobility">
<meta name="unique-selling-points" content="Premium brands, local service, competitive pricing, financing options, comprehensive support">

