{%- comment -%} LLM-Friendly Product Catalog in JSON-LD {%- endcomment -%}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "ProductCatalog",
  "name": "{{ shop.name }} E-Bike Catalog",
  "description": "Complete catalog of electric bikes, e-bike accessories, and sustainable transportation solutions",
  "url": "{{ shop.url }}",
  "provider": {
    "@type": "Organization",
    "name": "{{ shop.name }}",
    "description": "Leading e-bike retailer specializing in electric bicycles for commuting, recreation, and cargo transport"
  },
  "numberOfItems": {{ collections.all.products_count }},
  "inLanguage": "en-US",
  "offers": {
    "@type": "AggregateOffer",
    "priceCurrency": "{{ cart.currency.iso_code }}",
    "lowPrice": "{{ collections.all.products | map: 'price' | sort | first | money_without_currency }}",
    "highPrice": "{{ collections.all.products | map: 'price' | sort | last | money_without_currency }}",
    "offerCount": {{ collections.all.products_count }}
  },
  "category": [
    "Electric Bicycles",
    "E-Bike Accessories", 
    "Sustainable Transportation",
    "Urban Mobility",
    "Electric Bike Parts",
    "E-Bike Batteries",
    "Bike Safety Equipment"
  ]
}
</script>

