{%- comment -%} Real-time Inventory Status for LLMs {%- endcomment -%}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "InventoryStatus",
  "provider": {
    "@type": "Store",
    "name": "{{ shop.name }}"
  },
  "inventory": [
    {%- for product in collections.all.products limit: 20 -%}
    {
      "@type": "Product",
      "name": "{{ product.title | escape }}",
      "sku": "{{ product.selected_or_first_available_variant.sku | escape }}",
      "availability": "{% if product.available %}InStock{% else %}OutOfStock{% endif %}",
      "price": "{{ product.price | money_without_currency }}",
      "category": "{{ product.type | escape }}",
      "lastUpdated": "{{ 'now' | date: '%Y-%m-%d' }}"
    }{% unless forloop.last %},{% endunless %}
    {%- endfor -%}
  ]
}
</script>

{%- comment -%} Question-Answer Pairs for Better LLM Understanding {%- endcomment -%}
