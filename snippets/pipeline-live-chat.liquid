    background: #E5E7EB;
  }
  
  .chat-input-container {
    border-top: 1px solid #E5E7EB;
    padding: 16px;
  }
  
  .chat-input-wrapper {
    display: flex;
    align-items: center;
    gap: 8px;
    background: #F9FAFB;
    border: 1px solid #E5E7EB;
    border-radius: 8px;
    padding: 2px;
  }
  
  .chat-input {
    flex: 1;
    border: none;
    background: transparent;
    padding: 10px 12px;
    font-size: 14px;
    outline: none;
  }
  
  .chat-send-button {
    background: var(--ai-insights-accent-color, #3B82F6);
    color: white;
    border: none;
    border-radius: 6px;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  
  .chat-send-button:hover {
    background: var(--ai-recommendations-accent-color, #8B5CF6);
  }
  
  .chat-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 8px;
    font-size: 10px;
    color: #9CA3AF;
  }
  
  .ai-provider-status {
    display: flex;
    align-items: center;
    gap: 4px;
  }
  
  .provider-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #E5E7EB;
    transition: all 0.3s ease;
  }
  
  .provider-dot.active {
    background: #10B981;
  }
  
  .provider-dot.error {
    background: #EF4444;
  }
  
  .provider-dot.sending {
    background: #F59E0B;
    animation: pulse 1.5s ease-in-out infinite;
  }
  
  .typing-indicator .typing-dots {
    display: flex;
    gap: 4px;
    padding: 8px 0;
  }
  
  .typing-dots span {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #9CA3AF;
    animation: typing 1.4s ease-in-out infinite;
  }
  
  .typing-dots span:nth-child(2) {
    animation-delay: 0.2s;
  }
  
  .typing-dots span:nth-child(3) {
    animation-delay: 0.4s;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
  
  @keyframes typing {
    0%, 60%, 100% { transform: translateY(0); }
    30% { transform: translateY(-10px); }
  }
  
  .chat-notification {
    position: absolute;
    top: -8px;
    right: -8px;
    width: 16px;
    height: 16px;
    background: #EF4444;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .notification-dot {
    width: 6px;
    height: 6px;
    background: white;
    border-radius: 50%;
  }
  
  /* Mobile responsive */
  @media (max-width: 768px) {
    .pipeline-chat-widget {
      bottom: 10px;
      right: 10px;
    }
    
    .chat-panel {
      width: calc(100vw - 20px);
      height: calc(100vh - 100px);
      bottom: 60px;
    }
    
    .chat-trigger {
      padding: 10px 16px;
      font-size: 13px;
    }
    
    .chat-text {
      display: none;
    }
    
    {% unless settings.chat_show_on_mobile %}
    .pipeline-chat-widget {
      display: none;
    }
    {% endunless %}
  }
</style>

{%- comment -%} Chat Widget JavaScript {%- endcomment -%}
<script>
document.addEventListener('DOMContentLoaded', function() {
  const chatWidget = document.getElementById('pipeline-chat-widget');
  const chatTrigger = chatWidget?.querySelector('[data-chat-toggle]');
  const chatPanel = chatWidget?.querySelector('[data-chat-panel]');
  const chatClose = chatWidget?.querySelector('[data-chat-close]');
  
  if (!chatWidget) return;
  
  // Toggle chat panel
  chatTrigger?.addEventListener('click', function() {
    const isActive = chatPanel.classList.contains('active');
    
    if (isActive) {
      chatPanel.classList.remove('active');
      chatTrigger.querySelector('.icon-message').style.display = 'block';
      chatTrigger.querySelector('.icon-close').style.display = 'none';
    } else {
      chatPanel.classList.add('active');
      chatTrigger.querySelector('.icon-message').style.display = 'none';
      chatTrigger.querySelector('.icon-close').style.display = 'block';
      
      // Focus input when opening
      const chatInput = chatPanel.querySelector('[data-chat-input]');
      if (chatInput) {
        setTimeout(() => chatInput.focus(), 100);
      }
    }
  });
  
  // Close chat panel
  chatClose?.addEventListener('click', function() {
    chatPanel.classList.remove('active');
    chatTrigger.querySelector('.icon-message').style.display = 'block';
    chatTrigger.querySelector('.icon-close').style.display = 'none';
  });
  
  // Close on outside click
  document.addEventListener('click', function(e) {
    if (!chatWidget.contains(e.target) && chatPanel.classList.contains('active')) {
      chatPanel.classList.remove('active');
      chatTrigger.querySelector('.icon-message').style.display = 'block';
      chatTrigger.querySelector('.icon-close').style.display = 'none';
    }
  });
});
</script>

