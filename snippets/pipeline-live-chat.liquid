{% comment %}
  Pipeline Live Chat System
  Multi-platform chat integration with AI-powered responses
{% endcomment %}

{%- if settings.enable_live_chat -%}
{%- comment -%} Chat Widget Container {%- endcomment -%}
<div class="pipeline-chat-widget" id="pipeline-chat-widget" 
     {% unless settings.chat_show_on_mobile %}data-hide-mobile{% endunless %}
     {% if settings.ai_primary_provider %}data-primary-provider="{{ settings.ai_primary_provider }}"{% endif %}
     {% if settings.ai_fallback_enabled %}data-fallback-enabled="{{ settings.ai_fallback_enabled }}"{% endif %}
     {% if settings.claude_api_key %}data-claude-api-key="{{ settings.claude_api_key }}"{% endif %}
     {% if settings.openai_api_key %}data-openai-api-key="{{ settings.openai_api_key }}"{% endif %}
     {% if settings.gemini_api_key %}data-gemini-api-key="{{ settings.gemini_api_key }}"{% endif %}
     {% if settings.ai_cache_duration %}data-cache-duration="{{ settings.ai_cache_duration }}"{% endif %}
     {% if settings.api_timeout %}data-api-timeout="{{ settings.api_timeout }}"{% endif %}>
  
  {%- comment -%} Chat Button {%- endcomment -%}
  <button class="chat-trigger" data-chat-toggle aria-label="Open chat">
    <div class="chat-icon">
      <svg class="icon-message" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
        <path d="M20 2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h4l4 4 4-4h4c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm-2 12H6v-2h12v2zm0-3H6V9h12v2zm0-3H6V6h12v2z"/>
      </svg>
      <svg class="icon-close" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" style="display: none;">
        <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
      </svg>
    </div>
    <span class="chat-text">{{ 'chat.chat_with_us' | t }}</span>
    <div class="chat-notification" data-chat-notification style="display: none;">
      <span class="notification-dot"></span>
    </div>
  </button>

  {%- comment -%} Chat Panel {%- endcomment -%}
  <div class="chat-panel" data-chat-panel>
    
    <div class="chat-header">
      <div class="chat-agent">
        <div class="agent-avatar">
          <img src="https://cdn.shopify.com/s/files/1/0533/2089/files/support-avatar.jpg?v=1642515494" 
               alt="Support Agent" 
               onerror="this.src='data:image/svg+xml;base64,'">
        </div>
        <div class="agent-info">
          <div class="agent-name">{{ settings.agent_name | default: 'E-Bike Expert' }}</div>
          <div class="agent-status">
            <span class="status-dot online"></span>
            <span class="status-text">{{ 'chat.online_now' | t }}</span>
          </div>
        </div>
      </div>
      <button class="chat-close" data-chat-close>
        <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
          <path d="M15 5L5 15M5 5L15 15" stroke="currentColor" stroke-width="2"/>
        </svg>
      </button>
    </div>

    <div class="chat-messages" data-chat-messages>
      <div class="message agent-message">
        <div class="message-avatar">
          <img src="data:image/svg+xml;base64," alt="Agent">
        </div>
        <div class="message-content">
          <div class="message-text">{{ settings.welcome_message | default: 'Hi! I\'m here to help you find the perfect e-bike. What questions do you have?' }}</div>
          <div class="message-time">now</div>
        </div>
      </div>
    </div>

    {%- comment -%} Quick Replies {%- endcomment -%}
    <div class="chat-quick-replies" data-quick-replies>
      <button class="quick-reply" data-quick-text="I'm looking for my first e-bike">
        üö¥‚Äç‚ôÇÔ∏è First e-bike
      </button>
      <button class="quick-reply" data-quick-text="What's the best commuter e-bike?">
        üè¢ Commuting
      </button>
      <button class="quick-reply" data-quick-text="I need help with pricing and financing">
        üí∞ Pricing & financing
      </button>
      <button class="quick-reply" data-quick-text="Tell me about your warranty and returns">
        üõ°Ô∏è Warranty & returns
      </button>
    </div>

    <div class="chat-input-container">
      <div class="chat-input-wrapper">
        <input type="text" 
               class="chat-input" 
               data-chat-input
               placeholder="{{ settings.placeholder_message | default: 'Ihre Nachricht...' }}"
               maxlength="500">
        <button class="chat-send-button" data-chat-send aria-label="Send message">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
            <path d="M18 10L2 18V14L14 10L2 6V2L18 10Z"/>
          </svg>
        </button>
      </div>
      
      <div class="chat-footer">
        <div class="ai-provider-status" style="display: none;">
          <span>AI Status:</span>
          <span data-provider="claude" class="provider-dot" title="Claude"></span>
          <span data-provider="openai" class="provider-dot" title="OpenAI"></span>
          <span data-provider="gemini" class="provider-dot" title="Gemini"></span>
        </div>
        <div class="chat-powered-by">
          <span>Powered by {{ settings.chat_provider | default: 'AI Assistant' }}</span>
        </div>
      </div>
    </div>

  </div>
</div>

