{%- comment -%} Chat Widget Styles {%- endcomment -%}
<style>
  .pipeline-chat-widget {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 9999;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }
  
  .chat-trigger {
    display: flex;
    align-items: center;
    gap: 8px;
    background: var(--ai-insights-accent-color, #3B82F6);
    color: white;
    border: none;
    border-radius: 50px;
    padding: 12px 20px;
    cursor: pointer;
    box-shadow: 0 4px 20px rgba(59, 130, 246, 0.3);
    transition: all 0.3s ease;
    font-size: 14px;
    font-weight: 500;
  }
  
  .chat-trigger:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(59, 130, 246, 0.4);
  }
  
  .chat-panel {
    position: absolute;
    bottom: 70px;
    right: 0;
    width: 350px;
    height: 500px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.15);
    display: none;
    flex-direction: column;
    overflow: hidden;
  }
  
  .chat-panel.active {
    display: flex;
  }
  
  .chat-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 20px;
    background: var(--ai-insights-accent-color, #3B82F6);
    color: white;
  }
  
  .chat-agent {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  
  .agent-avatar img {
    width: 32px;
    height: 32px;
    border-radius: 50%;
  }
  
  .agent-name {
    font-weight: 600;
    font-size: 14px;
  }
  
  .agent-status {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 12px;
    opacity: 0.9;
  }
  
  .status-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #10B981;
  }
  
  .chat-messages {
    flex: 1;
    padding: 16px;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  
  .message {
    display: flex;
    gap: 10px;
    max-width: 85%;
  }
  
  .agent-message {
    align-self: flex-start;
  }
  
  .user-message {
    align-self: flex-end;
    flex-direction: row-reverse;
  }
  
  .message-avatar {
    flex-shrink: 0;
  }
  
  .message-avatar img {
    width: 24px;
    height: 24px;
    border-radius: 50%;
  }
  
  .user-avatar {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: #E5E7EB;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
  }
  
  .message-content {
    background: #F3F4F6;
    border-radius: 12px;
    padding: 10px 14px;
    font-size: 14px;
    line-height: 1.4;
  }
  
  .user-message .message-content {
    background: var(--ai-insights-accent-color, #3B82F6);
    color: white;
  }
  
  .message-time {
    font-size: 11px;
    color: #6B7280;
    margin-top: 4px;
  }
  
  .user-message .message-time {
    color: rgba(255, 255, 255, 0.7);
  }
  
  .message-meta {
    font-size: 10px;
    color: #9CA3AF;
    margin-top: 2px;
    font-style: italic;
  }
  
  .chat-quick-replies {
    padding: 12px 16px;
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    border-top: 1px solid #E5E7EB;
  }
  
  .quick-reply {
    background: #F9FAFB;
    border: 1px solid #E5E7EB;
    border-radius: 20px;
    padding: 6px 12px;
    font-size: 12px;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  
