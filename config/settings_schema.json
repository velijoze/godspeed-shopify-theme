  {
    "name": "Collection Page Settings",
    "settings": [
      {
        "type": "header",
        "content": "Layout Configuration"
      },
      {
        "type": "range",
        "id": "collection_sidebar_width",
        "min": 200,
        "max": 400,
        "step": 10,
        "default": 280,
        "label": "Sidebar Width (px)",
        "info": "Width of the filters sidebar"
      },
      {
        "type": "range",
        "id": "collection_layout_gap",
        "min": 20,
        "max": 60,
        "step": 5,
        "default": 40,
        "label": "Layout Gap (px)",
        "info": "Space between sidebar and product grid"
      },
      {
        "type": "range",
        "id": "collection_max_width",
        "min": 1200,
        "max": 1600,
        "step": 50,
        "default": 1400,
        "label": "Maximum Page Width (px)",
        "info": "Maximum width of the collection page"
      },
      {
        "type": "header",
        "content": "Product Grid"
      },
      {
        "type": "range",
        "id": "collection_products_per_page",
        "min": 12,
        "max": 48,
        "step": 6,
        "default": 24,
        "label": "Products per page"
      },
      {
        "type": "range",
        "id": "collection_columns_desktop",
        "min": 2,
        "max": 5,
        "step": 1,
        "default": 3,
        "label": "Desktop columns"
      },
      {
        "type": "select",
        "id": "collection_columns_mobile",
        "options": [
          {
            "value": "1",
            "label": "1 column"
          },
          {
            "value": "2",
            "label": "2 columns"
          }
        ],
        "default": "2",
        "label": "Mobile columns"
      },
      {
        "type": "header",
        "content": "Filter Settings"
      },
      {
        "type": "checkbox",
        "id": "collection_show_filters",
        "default": true,
        "label": "Show filters sidebar"
      },
      {
        "type": "checkbox",
        "id": "collection_sticky_filters",
        "default": true,
        "label": "Sticky filters sidebar"
      },
      {
        "type": "checkbox",
        "id": "collection_show_filter_toggle",
        "default": true,
        "label": "Show hide/show filters button"
      },
      {
        "type": "header",
        "content": "Product Cards"
      },
      {
        "type": "checkbox",
        "id": "collection_show_secondary_image",
        "default": true,
        "label": "Show secondary image on hover"
      },
      {
        "type": "checkbox",
        "id": "collection_show_vendor",
        "default": false,
        "label": "Show product vendor"
