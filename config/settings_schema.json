[
  {
    "name": "t:settings_schema.theme_info.name",
    "theme_name": "Godspeed Pipeline",
    "theme_version": "2.0.0",
    "theme_author": "Godspeed E-Bikes",
    "theme_documentation_url": "",
    "theme_support_url": ""
  },
  {
    "name": "Collection Page Settings",
    "settings": [
      {
        "type": "header",
        "content": "Layout Configuration"
      },
      {
        "type": "range",
        "id": "collection_sidebar_width",
        "min": 200,
        "max": 400,
        "step": 10,
        "default": 280,
        "label": "Sidebar Width (px)",
        "info": "Width of the filters sidebar"
      },
      {
        "type": "range",
        "id": "collection_layout_gap",
        "min": 20,
        "max": 60,
        "step": 5,
        "default": 40,
        "label": "Layout Gap (px)",
        "info": "Space between sidebar and product grid"
      },
      {
        "type": "range",
        "id": "collection_max_width",
        "min": 1200,
        "max": 1600,
        "step": 50,
        "default": 1400,
        "label": "Maximum Page Width (px)",
        "info": "Maximum width of the collection page"
      },
      {
        "type": "header",
        "content": "Product Grid"
      },
      {
        "type": "range",
        "id": "collection_products_per_page",
        "min": 12,
        "max": 48,
        "step": 6,
        "default": 24,
        "label": "Products per page"
      },
      {
        "type": "range",
        "id": "collection_columns_desktop",
        "min": 2,
        "max": 5,
        "step": 1,
        "default": 3,
        "label": "Desktop columns"
      },
      {
        "type": "select",
        "id": "collection_columns_mobile",
        "options": [
          {
            "value": "1",
            "label": "1 column"
          },
          {
            "value": "2",
            "label": "2 columns"
          }
        ],
        "default": "2",
        "label": "Mobile columns"
      },
      {
        "type": "header",
        "content": "Filter Settings"
      },
      {
        "type": "checkbox",
        "id": "collection_show_filters",
        "default": true,
        "label": "Show filters sidebar"
      },
      {
        "type": "checkbox",
        "id": "collection_sticky_filters",
        "default": true,
        "label": "Sticky filters sidebar"
      },
      {
        "type": "checkbox",
        "id": "collection_show_filter_toggle",
        "default": true,
        "label": "Show hide/show filters button"
      },
      {
        "type": "header",
        "content": "Product Cards"
      },
      {
        "type": "checkbox",
        "id": "collection_show_secondary_image",
        "default": true,
        "label": "Show secondary image on hover"
      },
      {
        "type": "checkbox",
        "id": "collection_show_vendor",
        "default": false,
        "label": "Show product vendor"
      },
      {
        "type": "checkbox",
        "id": "collection_show_rating",
        "default": false,
        "label": "Show product rating"
      },
      {
        "type": "checkbox",
        "id": "collection_show_badges",
        "default": true,
        "label": "Show sale/sold out badges"
      },
      {
        "type": "select",
        "id": "collection_image_ratio",
        "options": [
          {
            "value": "adapt",
            "label": "Adapt to image"
          },
          {
            "value": "square",
            "label": "Square"
          },
          {
            "value": "portrait",
            "label": "Portrait"
          }
        ],
        "default": "square",
        "label": "Image ratio"
      }
    ]
  },
  {
    "name": "Filter Configuration",
    "settings": [
      {
        "type": "header",
        "content": "Available Filters"
      },
      {
        "type": "checkbox",
        "id": "filter_collections",
        "default": true,
        "label": "Enable collection filter"
      },
      {
        "type": "checkbox",
        "id": "filter_availability",
        "default": true,
        "label": "Enable availability filter"
      },
      {
        "type": "checkbox",
        "id": "filter_price",
        "default": true,
        "label": "Enable price range filter"
      },
      {
        "type": "checkbox",
        "id": "filter_vendor",
        "default": false,
        "label": "Enable vendor filter"
      },
      {
        "type": "checkbox",
        "id": "filter_product_type",
        "default": true,
        "label": "Enable product type filter"
      },
      {
        "type": "checkbox",
        "id": "filter_tags",
        "default": false,
        "label": "Enable tags filter"
      },
      {
        "type": "header",
        "content": "Filter Display"
      },
      {
        "type": "text",
        "id": "filter_collections_title",
        "default": "ALL COLLECTIONS",
        "label": "Collections filter title"
      },
      {
        "type": "text",
        "id": "filter_availability_title",
        "default": "AVAILABILITY",
        "label": "Availability filter title"
      },
      {
        "type": "text",
        "id": "filter_price_title",
        "default": "PRICE",
        "label": "Price filter title"
      },
      {
        "type": "text",
        "id": "filter_show_more_text",
        "default": "SHOW MORE",
        "label": "Show more text"
      }
    ]
  },
  {
    "name": "Toolbar Settings",
    "settings": [
      {
        "type": "header",
        "content": "Toolbar Configuration"
      },
      {
        "type": "checkbox",
        "id": "toolbar_show_sort",
        "default": true,
        "label": "Show sorting dropdown"
      },
      {
        "type": "checkbox",
        "id": "toolbar_show_view_toggle",
        "default": true,
        "label": "Show grid view toggle"
      },
      {
        "type": "checkbox",
        "id": "toolbar_show_product_count",
        "default": true,
        "label": "Show product count"
      },
      {
        "type": "text",
        "id": "toolbar_hide_filters_text",
        "default": "HIDE FILTERS",
        "label": "Hide filters button text"
      },
      {
        "type": "text",
        "id": "toolbar_show_filters_text",
        "default": "SHOW FILTERS",
        "label": "Show filters button text"
      },
      {
        "type": "header",
        "content": "Sort Options"
      },
      {
        "type": "text",
        "id": "sort_best_selling",
        "default": "BEST SELLING",
        "label": "Best selling text"
      },
      {
        "type": "text",
        "id": "sort_featured",
        "default": "FEATURED",
        "label": "Featured text"
      },
      {
        "type": "text",
        "id": "sort_price_low_high",
        "default": "PRICE: LOW TO HIGH",
        "label": "Price low to high text"
      },
      {
        "type": "text",
        "id": "sort_price_high_low",
        "default": "PRICE: HIGH TO LOW",
        "label": "Price high to low text"
      },
      {
        "type": "text",
        "id": "sort_newest",
        "default": "NEWEST",
        "label": "Newest text"
      }
    ]
  },
  {
    "name": "Product Card Styling",
    "settings": [
      {
        "type": "header",
        "content": "Card Design"
      },
      {
        "type": "range",
        "id": "card_border_radius",
        "min": 0,
        "max": 20,
        "step": 2,
        "default": 0,
        "label": "Card border radius (px)"
      },
      {
        "type": "range",
        "id": "card_padding",
        "min": 10,
        "max": 30,
        "step": 5,
        "default": 15,
        "label": "Card padding (px)"
      },
      {
        "type": "checkbox",
        "id": "card_show_border",
        "default": false,
        "label": "Show card border"
      },
      {
        "type": "color",
        "id": "card_border_color",
        "default": "#e0e0e0",
        "label": "Card border color"
      },
      {
        "type": "header",
        "content": "Typography"
      },
      {
        "type": "range",
        "id": "card_title_size",
        "min": 12,
        "max": 20,
        "step": 1,
        "default": 14,
        "label": "Product title font size (px)"
      },
      {
        "type": "range",
        "id": "card_price_size",
        "min": 12,
        "max": 18,
        "step": 1,
        "default": 14,
        "label": "Price font size (px)"
      },
      {
        "type": "header",
        "content": "Badge Styling"
      },
      {
        "type": "color",
        "id": "badge_sale_color",
        "default": "#dc2626",
        "label": "Sale badge color"
      },
      {
        "type": "color",
        "id": "badge_sold_out_color",
        "default": "#6b7280",
        "label": "Sold out badge color"
      },
      {
        "type": "color",
        "id": "badge_text_color",
        "default": "#ffffff",
        "label": "Badge text color"
      }
    ]
  },
  {
    "name": "Performance & UX",
    "settings": [
      {
        "type": "header",
        "content": "Loading & Performance"
      },
      {
        "type": "checkbox",
        "id": "enable_lazy_loading",
        "default": true,
        "label": "Enable lazy loading"
      },
      {
        "type": "checkbox",
        "id": "enable_infinite_scroll",
        "default": false,
        "label": "Enable infinite scroll"
      },
      {
        "type": "checkbox",
        "id": "show_loading_overlay",
        "default": true,
        "label": "Show loading overlay"
      },
      {
        "type": "header",
        "content": "User Experience"
      },
      {
        "type": "checkbox",
        "id": "enable_quick_add",
        "default": false,
        "label": "Enable quick add to cart"
      },
      {
        "type": "checkbox",
        "id": "enable_quick_view",
        "default": false,
        "label": "Enable quick view"
      },
      {
        "type": "checkbox",
        "id": "enable_wishlist",
        "default": false,
        "label": "Enable wishlist"
      }
    ]
  }
]
