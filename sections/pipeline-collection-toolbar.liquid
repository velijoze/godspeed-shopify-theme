{% comment %}
  Pipeline Collection Toolbar Section
  Wrapper for the toolbar snippet
{% endcomment %}

<div class="page-width">
  {% render 'pipeline-collection-toolbar', section: section %}
</div>

{% schema %}
{
  "name": "Pipeline Collection Toolbar",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_filtering",
      "default": true,
      "label": "Enable filtering"
    },
    {
      "type": "checkbox",
      "id": "enable_sorting",
      "default": true,
      "label": "Enable sorting"
    },
    {
      "type": "checkbox",
      "id": "enable_view_toggle",
      "default": true,
      "label": "Enable grid/list toggle"
    }
  ],
  "presets": [
    {
      "name": "Pipeline Collection Toolbar"
    }
  ]
}
{% endschema %}