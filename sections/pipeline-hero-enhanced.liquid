{% comment %}
  Enhanced Pipeline Hero Section
  Modern hero banner with Pipeline styling and animations
{% endcomment %}

<div class="pipeline-hero-enhanced section-{{ section.id }}-padding">
  <div class="pipeline-hero-content page-width">
    
    {% if section.settings.image %}
      <div class="hero-media" data-parallax="0.3">
        <img
          src="{{ section.settings.image | image_url: width: 1600 }}"
          alt="{{ section.settings.image.alt | escape }}"
          loading="lazy"
          width="1600"
          height="800"
          class="hero-background"
        >
      </div>
    {% endif %}

    <div class="hero-text-content">
      {% if section.settings.heading %}
        <h1 class="hero-title" data-animate="fade-up">
          {{ section.settings.heading }}
        </h1>
      {% endif %}

      {% if section.settings.subheading %}
        <p class="hero-subtitle" data-animate="fade-up" data-delay="200">
          {{ section.settings.subheading }}
        </p>
      {% endif %}

      {% if section.settings.button_label %}
        <div class="hero-buttons" data-animate="fade-up" data-delay="400">
          <a href="{{ section.settings.button_link }}" class="hero-cta-button">
            {{ section.settings.button_label }}
            <span class="button-arrow">â†’</span>
          </a>
        </div>
      {% endif %}
    </div>

  </div>
</div>

<style>
.pipeline-hero-enhanced {
  position: relative;
  min-height: 70vh;
  display: flex;
  align-items: center;
  overflow: hidden;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

.pipeline-hero-content {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  min-height: 70vh;
}

.hero-media {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.hero-background {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 24px;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
}

.hero-text-content {
  max-width: 600px;
  padding: 4rem 2rem;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24px;
  backdrop-filter: blur(20px);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  margin-left: auto;
}

.hero-title {
  font-size: clamp(2.5rem, 5vw, 4rem);
  font-weight: 300;
  color: #2c2c2c;
  margin-bottom: 1.5rem;
  line-height: 1.2;
  letter-spacing: -0.02em;
}

.hero-subtitle {
  font-size: 1.25rem;
  color: #666;
  margin-bottom: 2.5rem;
  line-height: 1.6;
}

.hero-buttons {
  display: flex;
  gap: 1rem;
}

.hero-cta-button {
  background: #2c2c2c;
  color: white;
  padding: 16px 32px;
  border-radius: 50px;
  font-size: 1.125rem;
  font-weight: 600;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.hero-cta-button:hover {
  background: #1a1a1a;
  transform: translateY(-2px);
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
}

.button-arrow {
  transition: transform 0.3s ease;
}

.hero-cta-button:hover .button-arrow {
  transform: translateX(4px);
}

/* Mobile responsive */
@media (max-width: 768px) {
  .pipeline-hero-enhanced {
    min-height: 60vh;
    padding: 2rem 0;
  }
  
  .pipeline-hero-content {
    flex-direction: column;
    text-align: center;
    min-height: auto;
  }
  
  .hero-text-content {
    max-width: 100%;
    margin-left: 0;
    margin-top: 2rem;
    padding: 2rem 1.5rem;
  }
  
  .hero-title {
    font-size: 2.5rem;
  }
  
  .hero-subtitle {
    font-size: 1.125rem;
  }
  
  .hero-cta-button {
    padding: 14px 28px;
    font-size: 1rem;
  }
}
</style>

{% schema %}
{
  "name": "Pipeline Hero Enhanced",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Premium E-Bikes for Every Journey",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "default": "Discover our collection of high-performance electric bikes designed for urban commuting, mountain adventures, and everything in between.",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Shop Now",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "default": "/collections/all",
      "label": "Button link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom", 
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section padding bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Pipeline Hero Enhanced"
    }
  ]
}
{% endschema %}