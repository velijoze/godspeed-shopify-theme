{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .locations-grid {
    text-align: {{ section.settings.text_alignment }};
  }

  .locations-grid__heading {
    margin-bottom: 3rem;
  }

  .locations-grid__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
  }

  @media screen and (min-width: 750px) {
    .locations-grid__grid--2-columns {
      grid-template-columns: 1fr 1fr;
    }
    
    .locations-grid__grid--3-columns {
      grid-template-columns: 1fr 1fr 1fr;
    }
  }

  .location-card {
    background: rgba(var(--color-background), 1);
    border: 1px solid rgba(var(--color-foreground), 0.1);
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: 2rem;
    text-align: {{ section.settings.card_text_alignment }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .location-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(var(--color-foreground), 0.1);
  }

  .location-card__image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: {{ section.settings.image_border_radius }}px;
    margin-bottom: 1.5rem;
  }

  .location-card__icon {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    margin: 0 auto 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(var(--color-button), 0.1);
    border-radius: 50%;
    color: rgba(var(--color-button), 1);
  }

  .location-card__icon svg {
    width: 50%;
    height: 50%;
  }

  .location-card__city {
    color: rgba(var(--color-button), 1);
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .location-card__name {
    margin-bottom: 1rem;
  }

  .location-card__address {
    margin-bottom: 1rem;
    font-size: 0.875rem;
    opacity: 0.8;
  }

  .location-card__details {
    margin-bottom: 1.5rem;
  }

  .location-card__hours {
    background: rgba(var(--color-foreground), 0.05);
    padding: 1rem;
    border-radius: 6px;
    margin-bottom: 1rem;
    font-size: 0.875rem;
  }

  .location-card__contact {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 1.5rem;
  }

  .location-card__contact-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
  }

  .location-card__contact-item svg {
    width: 16px;
    height: 16px;
    opacity: 0.6;
  }

  .location-card__services {
    margin-bottom: 1.5rem;
  }

  .location-card__service-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: center;
    margin-top: 0.5rem;
  }

  .location-card__service-tag {
    background: rgba(var(--color-button), 0.1);
    color: rgba(var(--color-button), 1);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .location-card__buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .location-card__button {
    flex: 1;
    min-width: 120px;
  }
{%- endstyle -%}

<div class="locations-grid section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <div class="locations-grid__heading">
        <h2 class="{{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {{ section.settings.heading | escape }}
        </h2>
        {%- if section.settings.description != blank -%}
          <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {{ section.settings.description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="locations-grid__grid locations-grid__grid--{{ section.blocks.size }}-columns">
      {%- for block in section.blocks -%}
        <div class="location-card{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {{ block.shopify_attributes }}>
          
          {%- if block.settings.image != blank -%}
            <img
              src="{{ block.settings.image | image_url: width: 400 }}"
              alt="{{ block.settings.image.alt | default: block.settings.name | escape }}"
              class="location-card__image"
              loading="lazy"
            >
          {%- else -%}
            <div class="location-card__icon">
              {{ 'icon-truck.svg' | inline_asset_content }}
            </div>
          {%- endif -%}

          {%- if block.settings.city != blank -%}
            <p class="location-card__city h5">{{ block.settings.city | escape }}</p>
          {%- endif -%}

          {%- if block.settings.name != blank -%}
            <h3 class="location-card__name h4">{{ block.settings.name | escape }}</h3>
          {%- endif -%}

          {%- if block.settings.address != blank -%}
            <div class="location-card__address">
              {{ block.settings.address | escape | newline_to_br }}
            </div>
          {%- endif -%}

          {%- if block.settings.description != blank -%}
            <div class="location-card__details rte">
              {{ block.settings.description }}
            </div>
          {%- endif -%}

          {%- if block.settings.hours != blank -%}
            <div class="location-card__hours">
              <strong>Öffnungszeiten:</strong><br>
              {{ block.settings.hours | escape | newline_to_br }}
            </div>
          {%- endif -%}

          <div class="location-card__contact">
            {%- if block.settings.phone != blank -%}
              <div class="location-card__contact-item">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                {{ block.settings.phone | escape }}
              </div>
            {%- endif -%}
            {%- if block.settings.email != blank -%}
              <div class="location-card__contact-item">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                {{ block.settings.email | escape }}
              </div>
            {%- endif -%}
          </div>

          {%- if block.settings.services != blank -%}
            <div class="location-card__services">
              <strong>Services:</strong>
              <div class="location-card__service-list">
                {%- assign services = block.settings.services | split: ',' -%}
                {%- for service in services -%}
                  <span class="location-card__service-tag">{{ service | strip | escape }}</span>
                {%- endfor -%}
              </div>
            </div>
          {%- endif -%}

          <div class="location-card__buttons">
            {%- if block.settings.directions_link != blank -%}
              <a href="{{ block.settings.directions_link }}" class="button button--secondary location-card__button" target="_blank" rel="noopener">
                Route planen
              </a>
            {%- endif -%}
            
            {%- if block.settings.booking_link != blank -%}
              <a href="{{ block.settings.booking_link }}" class="button button--primary location-card__button">
                Termin buchen
              </a>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

