{% comment %}
  Pipeline Feature Identifier
  Shows you exactly which features are Pipeline vs Original Dawn theme
{% endcomment %}

<div class="pipeline-identifier-section">
  <div class="page-width">
    
    <div class="identifier-header">
      <h1>🔍 Feature Identification Guide</h1>
      <p>Know exactly which features are Pipeline enhanced vs. original Dawn theme</p>
    </div>

    <div class="feature-comparison">
      
      <!-- ORIGINAL DAWN FEATURES -->
      <div class="feature-category original-dawn">
        <div class="category-header">
          <h2>🏢 Original Dawn Theme Features</h2>
          <span class="feature-badge dawn-badge">STOCK DAWN</span>
        </div>
        
        <div class="feature-list">
          
          <div class="feature-item">
            <div class="feature-icon">🔍</div>
            <div class="feature-details">
              <h3>Basic Search</h3>
              <p>Simple search overlay without blur effects</p>
              <span class="feature-location">Header → Search Icon</span>
            </div>
            <div class="feature-status stock">DAWN</div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">🛒</div>
            <div class="feature-details">
              <h3>Basic Cart Drawer</h3>
              <p>Standard cart slideout without enhanced styling</p>
              <span class="feature-location">Header → Cart Icon</span>
            </div>
            <div class="feature-status stock">DAWN</div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">🖼️</div>
            <div class="feature-details">
              <h3>Standard Product Gallery</h3>
              <p>Basic image gallery without hover effects</p>
              <span class="feature-location">Product Pages → Images</span>
            </div>
            <div class="feature-status stock">DAWN</div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">📱</div>
            <div class="feature-details">
              <h3>Basic Mobile Menu</h3>
              <p>Standard hamburger menu</p>
              <span class="feature-location">Mobile → Menu Button</span>
            </div>
            <div class="feature-status stock">DAWN</div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">🎨</div>
            <div class="feature-details">
              <h3>Simple Product Cards</h3>
              <p>Basic product cards without hover animations</p>
              <span class="feature-location">Collection Pages → Products</span>
            </div>
            <div class="feature-status stock">DAWN</div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">📄</div>
            <div class="feature-details">
              <h3>Standard Sections</h3>
              <p>Basic Dawn sections (Featured Collection, Text with Image, etc.)</p>
              <span class="feature-location">Theme Editor → Add Section</span>
            </div>
            <div class="feature-status stock">DAWN</div>
          </div>

        </div>
      </div>

      <!-- PIPELINE ENHANCED FEATURES -->
      <div class="feature-category pipeline-enhanced">
        <div class="category-header">
          <h2>🚀 Pipeline Enhanced Features</h2>
          <span class="feature-badge pipeline-badge">PIPELINE</span>
        </div>
        
        <div class="feature-list">

          <div class="feature-item">
            <div class="feature-icon">🔍</div>
            <div class="feature-details">
              <h3>Enhanced Search Modal</h3>
              <p>Backdrop blur, rounded input, smooth animations</p>
              <span class="feature-location">Header → Search (with blur background)</span>
            </div>
            <div class="feature-status pipeline">PIPELINE</div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">🔍</div>
            <div class="feature-details">
              <h3>Product Image Zoom</h3>
              <p>Hover preview + full-screen zoom modal</p>
              <span class="feature-location">Any Product Image → Hover/Click</span>
            </div>
            <div class="feature-status pipeline">PIPELINE</div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">🛒</div>
            <div class="feature-details">
              <h3>Pipeline Cart Drawer</h3>
              <p>Modern styling, count badges, blur overlay</p>
              <span class="feature-location">Cart → Has item count (1)</span>
            </div>
            <div class="feature-status pipeline">PIPELINE</div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">🖼️</div>
            <div class="feature-details">
              <h3>Enhanced Product Gallery</h3>
              <p>Hover effects, rounded corners, smooth navigation</p>
              <span class="feature-location">Product Pages → Images lift on hover</span>
            </div>
            <div class="feature-status pipeline">PIPELINE</div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">✨</div>
            <div class="feature-details">
              <h3>Pipeline Animations</h3>
              <p>Smooth hover effects, scroll animations, micro-interactions</p>
              <span class="feature-location">All buttons/cards have smooth animations</span>
            </div>
            <div class="feature-status pipeline">PIPELINE</div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">🏆</div>
            <div class="feature-details">
              <h3>Smart Product Badges</h3>
              <p>Sale, New, Limited Stock, E-bike specific badges</p>
              <span class="feature-location">Product images → Badges in top-left</span>
            </div>
            <div class="feature-status pipeline">PIPELINE</div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">💖</div>
            <div class="feature-details">
              <h3>Wishlist System</h3>
              <p>Heart buttons, wishlist page, notifications</p>
              <span class="feature-location">Product cards → Heart icon</span>
            </div>
            <div class="feature-status pipeline">PIPELINE</div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">🔄</div>
            <div class="feature-details">
              <h3>Before/After Comparison</h3>
              <p>Interactive slider for product comparisons</p>
              <span class="feature-location">Dashboard → Add "Pipeline Before/After"</span>
            </div>
            <div class="feature-status pipeline">PIPELINE</div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">🎛️</div>
            <div class="feature-details">
              <h3>Master Control Panel</h3>
              <p>Complete dashboard to control all Pipeline features</p>
              <span class="feature-location">Dashboard → Add "Pipeline Master Control"</span>
            </div>
            <div class="feature-status pipeline">PIPELINE</div>
          </div>

        </div>
      </div>

    </div>

    <!-- VISUAL IDENTIFICATION GUIDE -->
    <div class="identification-guide">
      <h2>👁️ How to Visually Identify Pipeline Features</h2>
      
      <div class="visual-guide-grid">
        
        <div class="visual-guide-item">
          <div class="guide-icon">🔍</div>
          <h3>Search Modal</h3>
          <div class="guide-comparison">
            <div class="before">
              <span class="label">Dawn:</span>
              <span>Plain white overlay</span>
            </div>
            <div class="after">
              <span class="label">Pipeline:</span>
              <span>Blurred background, rounded input</span>
            </div>
          </div>
        </div>

        <div class="visual-guide-item">
          <div class="guide-icon">🛒</div>
          <h3>Cart Drawer</h3>
          <div class="guide-comparison">
            <div class="before">
              <span class="label">Dawn:</span>
              <span>Basic white slideout</span>
            </div>
            <div class="after">
              <span class="label">Pipeline:</span>
              <span>Count badge (1), blur overlay</span>
            </div>
          </div>
        </div>

        <div class="visual-guide-item">
          <div class="guide-icon">🎨</div>
          <h3>Product Cards</h3>
          <div class="guide-comparison">
            <div class="before">
              <span class="label">Dawn:</span>
              <span>Static cards, basic hover</span>
            </div>
            <div class="after">
              <span class="label">Pipeline:</span>
              <span>Cards lift up on hover, badges visible</span>
            </div>
          </div>
        </div>

        <div class="visual-guide-item">
          <div class="guide-icon">✨</div>
          <h3>Button Animations</h3>
          <div class="guide-comparison">
            <div class="before">
              <span class="label">Dawn:</span>
              <span>Basic color change</span>
            </div>
            <div class="after">
              <span class="label">Pipeline:</span>
              <span>Lift up, scale, shadow effects</span>
            </div>
          </div>
        </div>

      </div>
    </div>

    <!-- SECTION IDENTIFICATION -->
    <div class="section-identification">
      <h2>📋 Dashboard Section Identification</h2>
      
      <div class="section-grid">
        
        <div class="section-category">
          <h3>🏢 Original Dawn Sections</h3>
          <ul class="section-list dawn">
            <li>Featured Collection</li>
            <li>Image with Text</li>
            <li>Newsletter</li>
            <li>Rich Text</li>
            <li>Slideshow</li>
            <li>Video</li>
            <li>Multicolumn</li>
            <li>Collapsible Content</li>
          </ul>
        </div>

        <div class="section-category">
          <h3>🚀 Pipeline Enhanced Sections</h3>
          <ul class="section-list pipeline">
            <li><strong>Pipeline Master Control</strong> - Main control panel</li>
            <li><strong>Pipeline Controls</strong> - Simple controls</li>
            <li><strong>Pipeline Before/After</strong> - Comparison slider</li>
            <li><strong>Pipeline Hero Enhanced</strong> - Modern hero</li>
            <li><strong>Pipeline Features Showcase</strong> - Feature demo</li>
          </ul>
        </div>

      </div>
    </div>

    <!-- QUICK TEST GUIDE -->
    <div class="test-guide">
      <h2>⚡ Quick Test Guide</h2>
      <p>Test these features right now to confirm Pipeline enhancements are active:</p>
      
      <div class="test-buttons">
        <button onclick="document.querySelector('.header__search summary')?.click()" class="test-btn pipeline">
          Test Search Modal
        </button>
        
        <button onclick="document.querySelector('.cart-icon-bubble')?.click()" class="test-btn pipeline">
          Test Cart Drawer
        </button>
        
        <div class="test-item">
          <span>Hover over any product image →</span>
          <span class="test-result pipeline">Should show zoom effect</span>
        </div>
        
        <div class="test-item">
          <span>Hover over any button →</span>
          <span class="test-result pipeline">Should lift up with shadow</span>
        </div>
      </div>
    </div>

  </div>
</div>

<style>
.pipeline-identifier-section {
  padding: 4rem 0;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

.identifier-header {
  text-align: center;
  margin-bottom: 4rem;
}

.identifier-header h1 {
  font-size: 3rem;
  color: #2c2c2c;
  margin-bottom: 1rem;
}

.feature-comparison {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 3rem;
  margin-bottom: 4rem;
}

.feature-category {
  background: white;
  border-radius: 16px;
  padding: 2rem;
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
}

.category-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 2rem;
  padding-bottom: 1rem;
  border-bottom: 2px solid #f1f3f4;
}

.category-header h2 {
  font-size: 1.5rem;
  color: #2c2c2c;
}

.feature-badge {
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.dawn-badge {
  background: linear-gradient(135deg, #6c757d, #495057);
  color: white;
}

.pipeline-badge {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
  padding: 1.5rem;
  border-radius: 12px;
  margin-bottom: 1rem;
  transition: all 0.3s ease;
}

.original-dawn .feature-item {
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
}

.pipeline-enhanced .feature-item {
  background: linear-gradient(135deg, #e3f2fd, #f3e5f5);
}

.feature-item:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
}

.feature-icon {
  font-size: 2rem;
  min-width: 50px;
  text-align: center;
}

.feature-details {
  flex: 1;
}

.feature-details h3 {
  font-size: 1.125rem;
  color: #2c2c2c;
  margin-bottom: 0.5rem;
}

.feature-details p {
  color: #666;
  margin-bottom: 0.5rem;
  line-height: 1.5;
}

.feature-location {
  font-size: 0.875rem;
  color: #999;
  font-style: italic;
}

.feature-status {
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 10px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  align-self: flex-start;
}

.feature-status.stock {
  background: #6c757d;
  color: white;
}

.feature-status.pipeline {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.identification-guide {
  background: white;
  padding: 3rem;
  border-radius: 16px;
  margin-bottom: 3rem;
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
}

.identification-guide h2 {
  text-align: center;
  margin-bottom: 2rem;
  color: #2c2c2c;
}

.visual-guide-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
}

.visual-guide-item {
  text-align: center;
  padding: 1.5rem;
  border-radius: 12px;
  background: #f8f9fa;
}

.guide-icon {
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

.visual-guide-item h3 {
  margin-bottom: 1rem;
  color: #2c2c2c;
}

.guide-comparison {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.before,
.after {
  padding: 0.5rem;
  border-radius: 8px;
  text-align: left;
}

.before {
  background: #e9ecef;
}

.after {
  background: #e3f2fd;
}

.before .label,
.after .label {
  font-weight: 700;
  margin-right: 0.5rem;
}

.section-identification {
  background: white;
  padding: 3rem;
  border-radius: 16px;
  margin-bottom: 3rem;
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
}

.section-identification h2 {
  text-align: center;
  margin-bottom: 2rem;
  color: #2c2c2c;
}

.section-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 3rem;
}

.section-category h3 {
  margin-bottom: 1rem;
  color: #2c2c2c;
}

.section-list {
  list-style: none;
  padding: 0;
}

.section-list li {
  padding: 0.75rem;
  margin-bottom: 0.5rem;
  border-radius: 8px;
  transition: all 0.3s ease;
}

.section-list.dawn li {
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
}

.section-list.pipeline li {
  background: linear-gradient(135deg, #e3f2fd, #f3e5f5);
}

.section-list li:hover {
  transform: translateX(8px);
}

.test-guide {
  background: white;
  padding: 3rem;
  border-radius: 16px;
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
  text-align: center;
}

.test-guide h2 {
  margin-bottom: 1rem;
  color: #2c2c2c;
}

.test-buttons {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
  margin-top: 2rem;
}

.test-btn {
  padding: 12px 24px;
  border: none;
  border-radius: 50px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.test-btn.pipeline {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.test-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
}

.test-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
  background: #f8f9fa;
  border-radius: 8px;
}

.test-result.pipeline {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 0.875rem;
  font-weight: 600;
}

@media (max-width: 768px) {
  .feature-comparison,
  .section-grid {
    grid-template-columns: 1fr;
  }
  
  .visual-guide-grid {
    grid-template-columns: 1fr;
  }
  
  .test-item {
    flex-direction: column;
    text-align: center;
  }
}
</style>

{% schema %}
{
  "name": "Pipeline Feature Identifier",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Feature Identification"
    },
    {
      "type": "paragraph",
      "content": "This section helps you identify which features are original Dawn theme vs Pipeline enhanced features."
    },
    {
      "type": "checkbox",
      "id": "show_visual_guide",
      "default": true,
      "label": "Show visual identification guide"
    },
    {
      "type": "checkbox",
      "id": "show_test_buttons",
      "default": true,
      "label": "Show feature test buttons"
    },
    {
      "type": "checkbox",
      "id": "show_section_guide",
      "default": true,
      "label": "Show section identification guide"
    }
  ],
  "presets": [
    {
      "name": "Pipeline Feature Identifier"
    }
  ]
}
{% endschema %}