{% comment %}
  Pipeline-Style Mega Menu with Product Showcase
  Shows featured products directly in navigation dropdowns
{% endcomment %}

<style>
  .mega-menu {
    position: relative;
    display: inline-block;
  }
  
  .mega-menu-trigger {
    background: none;
    border: none;
    color: #666666;
    font-size: 14px;
    font-weight: 400;
    padding: 0.75rem 1rem;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: color 0.3s ease;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .mega-menu-trigger:hover {
    color: #1a1a1a;
  }
  
  .mega-menu-trigger::after {
    content: 'â–¾';
    font-size: 10px;
    transition: transform 0.3s ease;
  }
  
  .mega-menu.active .mega-menu-trigger::after {
    transform: rotate(180deg);
  }
  
  .mega-menu-dropdown {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    background: white;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    border: 1px solid #e5e7eb;
    min-width: 800px;
    max-width: 1000px;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 1000;
    padding: 3rem;
    margin-top: 1rem;
  }
  
  .mega-menu.active .mega-menu-dropdown {
    opacity: 1;
    visibility: visible;
  }
  
  .mega-menu-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
  }
  
  .mega-menu-category {
    text-align: center;
  }
  
  .mega-menu-category h3 {
    font-size: 1.6rem;
    font-weight: 300;
    color: #2c2c2c;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
  
  .mega-menu-product {
    margin-bottom: 2rem;
    transition: transform 0.3s ease;
  }
  
  .mega-menu-product:hover {
    transform: translateY(-3px);
  }
  
  .mega-menu-product-image {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
    border-radius: 4px;
    margin-bottom: 1rem;
  }
  
  .mega-menu-product-title {
    font-size: 1.2rem;
    font-weight: 400;
    color: #2c2c2c;
    margin-bottom: 0.5rem;
    text-decoration: none;
    display: block;
    line-height: 1.3;
  }
  
  .mega-menu-product-title:hover {
    color: #666666;
  }
  
  .mega-menu-product-price {
    font-size: 1.1rem;
    color: #666666;
    font-weight: 400;
  }
  
  .mega-menu-category-link {
    display: inline-block;
    margin-top: 1.5rem;
    padding: 0.8rem 2rem;
    background: transparent;
    color: #2c2c2c;
    text-decoration: none;
    border: 1px solid #2c2c2c;
    font-size: 1.1rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all 0.3s ease;
  }
  
  .mega-menu-category-link:hover {
    background: #2c2c2c;
    color: white;
  }
  
  /* Mobile responsive */
  @media (max-width: 990px) {
    .mega-menu-dropdown {
      display: none;
    }
  }
</style>

<div class="mega-menu" data-mega-menu>
  <button class="mega-menu-trigger" data-mega-menu-trigger>
    {{ section.settings.menu_title | default: "E-Bikes" }}
  </button>
  
  <div class="mega-menu-dropdown" data-mega-menu-dropdown>
    <div class="mega-menu-grid">
      
      <!-- Commuter E-Bikes Category -->
      <div class="mega-menu-category">
        <h3>{{ section.settings.category_1_title | default: "Commuter" }}</h3>
        
        {% if section.settings.category_1_collection != blank %}
          {% assign commuter_products = section.settings.category_1_collection.products | limit: 1 %}
          {% for product in commuter_products %}
            <div class="mega-menu-product">
              <a href="{{ product.url }}">
                {% if product.featured_image %}
                  <img src="{{ product.featured_image | img_url: '300x300' }}" 
                       alt="{{ product.title | escape }}"
                       class="mega-menu-product-image">
                {% endif %}
                <div class="mega-menu-product-title">{{ product.title | truncate: 40 }}</div>
                <div class="mega-menu-product-price">
                  {{ product.price | money }}
                  {% if product.compare_at_price > product.price %}
                    <span style="text-decoration: line-through; margin-left: 0.5rem; color: #999;">
                      {{ product.compare_at_price | money }}
                    </span>
                  {% endif %}
                </div>
              </a>
            </div>
          {% endfor %}
        {% endif %}
        
        <a href="{{ section.settings.category_1_link | default: '/collections/commuter' }}" 
           class="mega-menu-category-link">
          {{ 'navigation.view_all_commuter' | t }}
        </a>
      </div>
      
      <!-- Mountain E-Bikes Category -->
