<style>
  .product-tabs-section {
    padding: 0;
    margin: 3rem 0;
  }
  
  .product-tabs-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .product-tabs-nav {
    display: flex;
    border-bottom: 1px solid #e5e7eb;
    margin-bottom: 3rem;
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
  
  .product-tabs-nav::-webkit-scrollbar {
    display: none;
  }
  
  .tab-button {
    background: none;
    border: none;
    padding: 1.5rem 2rem;
    font-size: 1.4rem;
    font-weight: 400;
    color: #666666;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all 0.3s ease;
    border-bottom: 3px solid transparent;
    white-space: nowrap;
    position: relative;
    font-family: inherit;
  }
  
  .tab-button:hover {
    color: #2c2c2c;
    background: rgba(44, 44, 44, 0.05);
  }
  
  .tab-button.active {
    color: #2c2c2c;
    border-bottom-color: #2c2c2c;
    font-weight: 500;
  }
  
  .product-tabs-content {
    min-height: 400px;
  }
  
  .tab-panel {
    display: none;
    animation: fadeInUp 0.4s ease;
  }
  
  .tab-panel.active {
    display: block;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Specifications Tab */
  .specs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
  }
  
  .specs-category {
    background: #f9fafb;
    padding: 2rem;
    border-radius: 8px;
    border: 1px solid #e5e7eb;
  }
  
  .specs-category h3 {
    font-size: 1.8rem;
    font-weight: 500;
    color: #2c2c2c;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-bottom: 2px solid #2c2c2c;
    padding-bottom: 0.5rem;
  }
  
  .spec-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    border-bottom: 1px solid #e5e7eb;
  }
  
  .spec-row:last-child {
    border-bottom: none;
  }
  
  .spec-label {
    font-size: 1.3rem;
    color: #4b5563;
    font-weight: 500;
  }
  
  .spec-value {
    font-size: 1.3rem;
    color: #2c2c2c;
    font-weight: 600;
    text-align: right;
  }
  
  /* Features Tab */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    padding: 2rem;
    background: #f9fafb;
    border-radius: 8px;
    transition: transform 0.3s ease;
  }
  
  .feature-item:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }
  
  .feature-icon {
    width: 50px;
    height: 50px;
    background: #2c2c2c;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.8rem;
    flex-shrink: 0;
  }
  
  .feature-content h4 {
    font-size: 1.6rem;
    font-weight: 500;
    color: #2c2c2c;
    margin-bottom: 0.8rem;
  }
  
  .feature-content p {
    font-size: 1.3rem;
    color: #666666;
    line-height: 1.6;
  }
  
  /* Warranty Tab */
  .warranty-content {
    background: #f9fafb;
    padding: 3rem;
    border-radius: 8px;
    border: 1px solid #e5e7eb;
  }
  
  .warranty-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
  }
  
  .warranty-item {
    text-align: center;
    padding: 2rem;
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
  
  .warranty-item h3 {
    font-size: 1.8rem;
    font-weight: 500;
    color: #2c2c2c;
    margin-bottom: 1rem;
  }
  
  .warranty-item .warranty-period {
    font-size: 3rem;
    font-weight: 300;
    color: #2c2c2c;
    display: block;
    margin-bottom: 0.5rem;
  }
  
  .warranty-item .warranty-description {
    font-size: 1.3rem;
    color: #666666;
    line-height: 1.5;
  }
  
  .warranty-terms {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    margin-top: 2rem;
  }
  
  .warranty-terms h4 {
    font-size: 1.6rem;
    font-weight: 500;
    color: #2c2c2c;
    margin-bottom: 1.5rem;
  }
  
  .warranty-terms ul {
    list-style: none;
    padding: 0;
  }
  
  .warranty-terms li {
    font-size: 1.3rem;
    color: #4b5563;
    line-height: 1.6;
    margin-bottom: 0.8rem;
    padding-left: 2rem;
    position: relative;
  }
  
  .warranty-terms li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: #22c55e;
    font-weight: 600;
  }
  
  /* Reviews Tab */
  .reviews-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e5e7eb;
  }
  
  .reviews-summary {
    display: flex;
    align-items: center;
    gap: 2rem;
  }
  
  .rating-score {
    font-size: 4rem;
    font-weight: 300;
    color: #2c2c2c;
  }
  
  .rating-stars {
    display: flex;
    gap: 0.3rem;
    font-size: 2rem;
    color: #fbbf24;
  }
  
  .reviews-count {
    font-size: 1.4rem;
    color: #666666;
    margin-top: 0.5rem;
  }
  
  .write-review-btn {
    padding: 1rem 2rem;
    background: #2c2c2c;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 1.3rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  
  .write-review-btn:hover {
    background: #1a1a1a;
  }
  
  .review-item {
    padding: 2rem;
    background: #f9fafb;
    border-radius: 8px;
    margin-bottom: 2rem;
    border: 1px solid #e5e7eb;
  }
  
  .review-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
  }
  
  .reviewer-info h5 {
    font-size: 1.4rem;
    font-weight: 500;
    color: #2c2c2c;
    margin-bottom: 0.3rem;
  }
  
  .review-date {
    font-size: 1.2rem;
    color: #666666;
  }
  
  .review-rating {
    display: flex;
    color: #fbbf24;
    font-size: 1.6rem;
  }
  
