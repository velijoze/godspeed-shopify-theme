    font-size: 1.3rem;
    color: #4b5563;
    line-height: 1.6;
  }
  
  /* Mobile responsive */
  @media (max-width: 768px) {
    .product-tabs-wrapper {
      padding: 0 1rem;
    }
    
    .tab-button {
      padding: 1rem 1.5rem;
      font-size: 1.2rem;
    }
    
    .specs-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .features-grid {
      grid-template-columns: 1fr;
    }
    
    .warranty-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .reviews-header {
      flex-direction: column;
      gap: 1.5rem;
      align-items: flex-start;
    }
    
    .reviews-summary {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
  }
</style>

