    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .setting-item {
    padding: 1.5rem;
    background: #f8f9fa;
    border-radius: 12px;
  }

  .setting-label {
    font-weight: 600;
    color: #111827;
    margin-bottom: 0.5rem;
  }

  .setting-value {
    margin-bottom: 0.75rem;
  }

  .status-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .status-badge[data-enabled="true"] {
    background: #dcfce7;
    color: #166534;
  }

  .status-badge[data-enabled="false"] {
    background: #fef2f2;
    color: #991b1b;
  }

  .setting-description {
    font-size: 0.875rem;
    color: #6b7280;
    line-height: 1.5;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
  }

  .stat-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: #f8f9fa;
    border-radius: 12px;
  }

  .stat-icon {
    font-size: 2rem;
  }

  .stat-number {
    font-size: 1.875rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 0.25rem;
  }

  .stat-label {
    font-size: 0.875rem;
    color: #6b7280;
  }

  .webhook-configuration {
    margin-bottom: 0;
  }

  .webhook-description {
    color: #6b7280;
    margin-bottom: 1.5rem;
  }

  .webhook-endpoints {
    background: #f8f9fa;
    border-radius: 8px;
    padding: 1.5rem;
  }

