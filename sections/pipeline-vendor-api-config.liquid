    font-size: 0.875rem;
    position: relative;
    padding-left: 1.5rem;
  }

  .integration-benefits li:before {
    content: "✓";
    position: absolute;
    left: 0;
    color: #22c55e;
    font-weight: 600;
  }

  .global-api-settings,
  .api-usage-stats,
  .webhook-configuration {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .global-api-settings h3,
  .api-usage-stats h3,
  .webhook-configuration h3 {
    font-size: 1.5rem;
    font-weight: 600;
