{% comment %}
  Pipeline Collection Banner
  Enhanced collection header with overlay and breadcrumbs
{% endcomment %}

<div class="pipeline-collection-banner {{ section.settings.color_scheme }} banner-{{ section.settings.banner_height }}">
  
  {%- if section.settings.show_breadcrumb -%}
    {% render 'pipeline-breadcrumbs' %}
  {%- endif -%}

  <div class="collection-banner__content">
    {%- if collection.image and section.settings.show_collection_image -%}
      <div class="collection-banner__media">
        <img src="{{ collection.image | image_url: width: 1920 }}"
             alt="{{ collection.image.alt | default: collection.title }}"
             width="1920"
             height="600"
             loading="eager">
        {%- if section.settings.overlay_opacity > 0 -%}
          <div class="collection-banner__overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }}"></div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="page-width">
      <div class="collection-banner__text text-{{ section.settings.text_alignment }}">
        
        <h1 class="collection-banner__title">
          {{ collection.title }}
        </h1>

        {%- if collection.description != blank and section.settings.show_collection_description -%}
          <div class="collection-banner__description rte">
            {{ collection.description }}
          </div>
        {%- endif -%}

        <div class="collection-banner__stats">
          <div class="collection-stat">
            <span class="stat-number">{{ collection.products_count }}</span>
            <span class="stat-label">
              {%- if collection.products_count == 1 -%}
                {{ 'collections.general.item' | t | default: 'item' }}
              {%- else -%}
                {{ 'collections.general.items' | t | default: 'items' }}
              {%- endif -%}
            </span>
          </div>
          
          {%- if collection.all_vendors.size > 1 -%}
            <div class="collection-stat">
              <span class="stat-number">{{ collection.all_vendors.size }}</span>
              <span class="stat-label">
                {%- if collection.all_vendors.size == 1 -%}
                  brand
                {%- else -%}
                  brands
                {%- endif -%}
              </span>
            </div>
          {%- endif -%}
        </div>

      </div>
    </div>
  </div>

</div>

<style>
  .pipeline-collection-banner {
    position: relative;
    overflow: hidden;
    margin-bottom: 2rem;
  }

  .banner-small {
    min-height: 200px;
  }

  .banner-medium {
    min-height: 300px;
  }

  .banner-large {
    min-height: 400px;
  }

  .collection-banner__content {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: inherit;
  }

  .collection-banner__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .collection-banner__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .collection-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.2));
    z-index: 2;
  }

  .collection-banner__text {
    position: relative;
    z-index: 3;
    padding: 3rem 0;
    width: 100%;
  }

  .collection-banner__title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .collection-banner__description {
    font-size: 1.125rem;
    line-height: 1.7;
    margin-bottom: 2rem;
    max-width: 600px;
    opacity: 0.9;
  }

  .text-center .collection-banner__description {
    margin-left: auto;
    margin-right: auto;
  }

  .collection-banner__stats {
    display: flex;
    gap: 2rem;
    justify-content: center;
  }

  .text-left .collection-banner__stats {
    justify-content: flex-start;
  }

  .text-right .collection-banner__stats {
    justify-content: flex-end;
  }

  .collection-stat {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    line-height: 1;
    margin-bottom: 0.25rem;
  }

  .stat-label {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    opacity: 0.8;
  }

  /* Color Schemes */
  .color-scheme-1 {
    background: #f8f9fa;
    color: #111827;
  }

  .color-scheme-2 {
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
  }

  .color-scheme-inverse {
    background: #111827;
    color: white;
  }

  /* No Image Fallback */
  .pipeline-collection-banner:not(.has-image) {
    background: linear-gradient(135deg, #f8f9fa 0%, #e5e7eb 100%);
    color: #111827;
  }

  .pipeline-collection-banner:not(.has-image) .collection-banner__title {
    text-shadow: none;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .banner-small,
    .banner-medium,
    .banner-large {
      min-height: 250px;
    }

    .collection-banner__text {
      padding: 2rem 0;
    }

    .collection-banner__title {
      font-size: 2rem;
      line-height: 1.2;
    }

    .collection-banner__description {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }

    .collection-banner__stats {
      gap: 1.5rem;
    }

    .stat-number {
      font-size: 1.5rem;
    }

    .stat-label {
      font-size: 0.8125rem;
    }
  }

  @media (max-width: 480px) {
    .collection-banner__stats {
      flex-direction: column;
      gap: 1rem;
      align-items: center;
    }

    .text-left .collection-banner__stats,
    .text-right .collection-banner__stats {
      align-items: center;
    }
  }
</style>

{% schema %}
{
  "name": "Pipeline Collection Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "default": true,
      "label": "Show collection image"
    },
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "default": true,
      "label": "Show collection description"
    },
    {
      "type": "checkbox",
      "id": "show_breadcrumb",
      "default": true,
      "label": "Show breadcrumb navigation"
    },
    {
      "type": "select",
      "id": "banner_height",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "medium",
      "label": "Banner height"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Text alignment"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 10,
      "default": 40,
      "label": "Image overlay opacity (%)"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "color-scheme-1",
          "label": "Light"
        },
        {
          "value": "color-scheme-2",
          "label": "Gradient"
        },
        {
          "value": "color-scheme-inverse",
          "label": "Dark"
        }
      ],
      "default": "color-scheme-1",
      "label": "Color scheme"
    }
  ],
  "presets": [
    {
      "name": "Pipeline Collection Banner"
    }
  ]
}
{% endschema %}