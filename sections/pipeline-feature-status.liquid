{% comment %}
  Custom – Pipeline Feature Status
{% endcomment %}

<section class="section-{{ section.id }}-padding pipeline-feature-status">
  <div class="page-width">
    <h2 class="h2">Feature Status</h2>
    <ul class="list-disc">
      <li>Performance metrics: <strong>{{ section.settings.show_performance_metrics }}</strong></li>
      <li>Feature usage: <strong>{{ section.settings.show_feature_usage }}</strong></li>
    </ul>
  </div>
  {% if section.settings.show_performance_metrics %}
    <script>window.__pipelineFeatureStatus = { timestamp: Date.now() };</script>
  {% endif %}
</section>

{% schema %}
{
  "name": "Custom – Pipeline Feature Status",
  "settings": [
    { "type": "checkbox", "id": "show_performance_metrics", "label": "Show performance metrics", "default": true },
    { "type": "checkbox", "id": "show_feature_usage", "label": "Show feature usage", "default": true },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Top padding", "default": 24 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Bottom padding", "default": 24 }
  ],
  "presets": [ { "name": "Custom – Pipeline Feature Status" } ]
}
{% endschema %}

