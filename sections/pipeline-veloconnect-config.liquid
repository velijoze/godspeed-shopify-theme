{% comment %}
  Pipeline VeloConnect Configuration Section
  Admin panel for VeloConnect industry-standard bicycle data exchange
{% endcomment %}

<div class="pipeline-veloconnect-config section-{{ section.id }}-padding">
  <div class="page-width">
    
    <div class="config-header">
      <h2>{{ section.settings.section_title | default: 'VeloConnect Integration' }}</h2>
      <p class="config-description">{{ section.settings.section_description | default: 'Industry-standard bicycle data exchange connecting to 120+ suppliers through VeloConnect protocol. Simplify your vendor management with a single, unified API.' }}</p>
      
      <div class="veloconnect-benefits">
        <div class="benefit-item">
          <div class="benefit-icon">üîó</div>
          <div class="benefit-content">
            <h4>Unified Integration</h4>
            <p>One API connection replaces multiple vendor APIs</p>
          </div>
        </div>
        <div class="benefit-item">
          <div class="benefit-icon">üè≠</div>
          <div class="benefit-content">
            <h4>Industry Standard</h4>
            <p>Trusted by 120+ suppliers including your vendors</p>
          </div>
        </div>
        <div class="benefit-item">
          <div class="benefit-icon">‚ö°</div>
          <div class="benefit-content">
            <h4>Advanced Features</h4>
            <p>Click & Collect, Dropshipping, Real-time sync</p>
          </div>
        </div>
      </div>
    </div>

    {%- comment -%} VeloConnect Connection Settings {%- endcomment -%}
    <div class="veloconnect-connection-card">
      <div class="card-header">
        <h3>VeloConnect Connection</h3>
        <div class="api-mode-toggle">
          <span class="mode-label">API Mode:</span>
          <div class="toggle-buttons">
            <button class="mode-btn {{ section.settings.use_velo_api | json == false | json }}" data-mode="veloconnect">
              VeloConnect v{{ section.settings.api_version | default: '1.6' }}
            </button>
            <button class="mode-btn {{ section.settings.use_velo_api | json }}" data-mode="velo">
              velo.API v2
            </button>
          </div>
        </div>
      </div>
      
      <div class="connection-settings">
        <div class="settings-grid">
          <div class="setting-group">
            <label class="setting-label">VeloConnect Endpoint</label>
            <div class="setting-value">
              <code>{{ section.settings.veloconnect_api_url | default: 'https://api.veloconnect.de/v1.6/' }}</code>
            </div>
            <p class="setting-description">Traditional VeloConnect XML-based API</p>
          </div>
          
          <div class="setting-group">
            <label class="setting-label">velo.API Endpoint</label>
            <div class="setting-value">
              <code>{{ section.settings.velo_api_url | default: 'https://velo-api.de/api/v2/' }}</code>
            </div>
            <p class="setting-description">Enhanced REST API with additional features</p>
          </div>
          
          <div class="setting-group">
            <label class="setting-label">Dealer Code</label>
            <div class="setting-value">
              {% if section.settings.dealer_code != blank %}
                <code>{{ section.settings.dealer_code }}</code>
              {% else %}
                <span class="not-configured">Not configured</span>
              {% endif %}
            </div>
            <p class="setting-description">Your unique VeloConnect dealer identifier</p>
          </div>
          
          <div class="setting-group">
            <label class="setting-label">API Version</label>
            <div class="setting-value">
              <code>v{{ section.settings.api_version | default: '1.6' }}</code>
            </div>
            <p class="setting-description">VeloConnect protocol version</p>
          </div>
          
          <div class="setting-group">
            <label class="setting-label">Sync Interval</label>
            <div class="setting-value">
              {{ section.settings.sync_interval | default: 3600 }} seconds
            </div>
            <p class="setting-description">Automatic synchronization frequency</p>
          </div>
          
          <div class="setting-group">
            <label class="setting-label">Connection Status</label>
            <div class="setting-value">
              <div class="status-indicator">
                <span class="status-dot" data-connection-status="unknown"></span>
                <span class="status-text">Not tested</span>
              </div>
            </div>
            <p class="setting-description">Current VeloConnect connection state</p>
          </div>
        </div>
      </div>
    </div>

    {%- comment -%} Supplier Configuration {%- endcomment -%}
    <div class="suppliers-configuration">
      <h3>Connected Suppliers</h3>
      <p class="suppliers-description">Configure your e-bike suppliers available through VeloConnect network.</p>
      
      <div class="suppliers-grid">
