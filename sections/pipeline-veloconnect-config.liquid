        {%- if section.settings.enable_orbea -%}
          <div class="supplier-config-card">
            <div class="supplier-header">
              <div class="supplier-brand">
                <img src="https://cdn.shopify.com/s/files/1/0533/2089/files/orbea-logo.svg?v=1642515494" 
