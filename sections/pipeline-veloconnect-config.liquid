                     alt="Cube" class="supplier-logo"
                     onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                <span class="supplier-name-fallback" style="display: none;">Cube</span>
                <div class="supplier-info">
                  <h4>Cube</h4>
                  <span class="supplier-country">Germany</span>
                </div>
              </div>
              <div class="supplier-toggle">
                <input type="checkbox" class="toggle-switch" {% if section.settings.enable_cube %}checked{% endif %} disabled>
                <span class="toggle-label">Enabled</span>
              </div>
            </div>
            
            <div class="supplier-details">
              <div class="detail-row">
                <span class="detail-label">Supplier Code:</span>
                <span class="detail-value">
                  <code>{{ section.settings.cube_supplier_code | default: 'CUBE_DE' }}</code>
                </span>
              </div>
              <div class="detail-row">
                <span class="detail-label">Price Markup:</span>
                <span class="detail-value">{{ section.settings.cube_price_markup | default: 1.15 | minus: 1 | times: 100 }}%</span>
              </div>
              <div class="detail-row">
                <span class="detail-label">Categories:</span>
                <span class="detail-value">Urban, Trekking, MTB, Kids E-Bikes</span>
              </div>
              <div class="detail-row">
