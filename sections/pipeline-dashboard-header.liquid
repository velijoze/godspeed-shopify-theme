{% comment %}
  Custom – Pipeline Dashboard Header
{% endcomment %}

<section class="section-{{ section.id }}-padding pipeline-dashboard-header">
  <div class="page-width">
    <h1 class="h1">{{ section.settings.title }}</h1>
    {% if section.settings.subtitle != blank %}
      <p class="subtext">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Custom – Pipeline Dashboard Header",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Pipeline Theme Control Center" },
    { "type": "text", "id": "subtitle", "label": "Subtitle", "default": "Manage Pipeline features" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Top padding", "default": 36 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Bottom padding", "default": 24 }
  ],
  "presets": [
    { "name": "Custom – Pipeline Dashboard Header" }
  ]
}
{% endschema %}

