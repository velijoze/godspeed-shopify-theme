# Godspeed Shopify Theme - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# =============================================================================
# SHOPIFY STORE CONFIGURATION
# =============================================================================

# Your Shopify store URL (without trailing slash)
SHOPIFY_STORE_URL=https://your-store.myshopify.com

# Store password (if password protected)
SHOPIFY_STORE_PASSWORD=your_store_password

# Shopify API credentials (for theme development)
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token

# Theme ID (optional, for specific theme targeting)
SHOPIFY_THEME_ID=your_theme_id

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test user credentials for automated testing
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123

# Test admin credentials (if different from regular user)
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASSWORD=adminpassword123

# Testing environment settings
NODE_ENV=test
LOCAL_TESTING=false

# Browser settings for testing
HEADLESS_BROWSER=true
SLOW_MO=0

# =============================================================================
# PERFORMANCE THRESHOLDS
# =============================================================================

# Core Web Vitals Thresholds (in milliseconds)
PERFORMANCE_LCP_THRESHOLD=2500
PERFORMANCE_FID_THRESHOLD=100
PERFORMANCE_CLS_THRESHOLD=0.1
PERFORMANCE_FCP_THRESHOLD=1800
PERFORMANCE_TTFB_THRESHOLD=800
PERFORMANCE_TTI_THRESHOLD=3800

# Page Load Time Thresholds (in milliseconds)
HOMEPAGE_LOAD_THRESHOLD=3000
PRODUCT_PAGE_LOAD_THRESHOLD=2000
COMPARISON_TOOL_THRESHOLD=1000
SIZE_CALCULATOR_THRESHOLD=500

# Mobile Performance Thresholds (more lenient)
MOBILE_LOAD_THRESHOLD=4000
MOBILE_INTERACTION_THRESHOLD=600

# =============================================================================
# API INTEGRATIONS
# =============================================================================

# Cube API Configuration
CUBE_API_ENABLED=false
CUBE_API_ENDPOINT=https://api.cube.eu/v1
CUBE_API_KEY=your_cube_api_key
CUBE_API_SECRET=your_cube_api_secret
CUBE_API_TIMEOUT=5000

# VeloConnect API Configuration
VELOCONNECT_API_ENABLED=false
VELOCONNECT_API_ENDPOINT=https://api.veloconnect.com/v1
VELOCONNECT_API_KEY=your_veloconnect_api_key
VELOCONNECT_API_SECRET=your_veloconnect_api_secret
VELOCONNECT_API_TIMEOUT=5000

# API Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=3600

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Calendly Integration
CALENDLY_API_KEY=your_calendly_api_key
CALENDLY_WEBHOOK_SECRET=your_calendly_webhook_secret
CALENDLY_DEFAULT_USER=your_calendly_username

# Google Maps Integration
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_MAPS_DEFAULT_LAT=47.3769
GOOGLE_MAPS_DEFAULT_LNG=8.5417

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@godspeed.ch
SMTP_FROM_NAME=Godspeed E-Bikes

# =============================================================================
# LOCALIZATION & REGIONAL SETTINGS
# =============================================================================

# Default locale and currency
DEFAULT_LOCALE=de-CH
DEFAULT_CURRENCY=CHF
DEFAULT_TIMEZONE=Europe/Zurich

# Supported locales (comma-separated)
SUPPORTED_LOCALES=de-CH,fr-CH,it-CH,en-US

# Regional API endpoints
SWISS_POST_API_KEY=your_swiss_post_api_key
DHL_API_KEY=your_dhl_api_key

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Error Monitoring
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_SAMPLE_RATE=0.1

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development server settings
DEV_SERVER_PORT=3000
DEV_SERVER_HOST=localhost
LIVE_RELOAD=true

# Debug settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
LOG_LEVEL=info

# Feature flags for development
FEATURE_COMPARISON_TOOL=true
FEATURE_SIZE_CALCULATOR=true
FEATURE_BOOKING_SYSTEM=true
FEATURE_API_DASHBOARD=true
FEATURE_QR_CODES=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Session configuration
SESSION_SECRET=your_session_secret_key
SESSION_TIMEOUT=3600

# CSRF protection
CSRF_SECRET=your_csrf_secret_key

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================

# CI/CD environment detection
CI=false
GITHUB_ACTIONS=false

# Deployment settings
DEPLOY_ENVIRONMENT=development
DEPLOY_BRANCH=main

# Test configuration in CI
CI_PARALLEL_WORKERS=2
CI_RETRY_COUNT=2
CI_TIMEOUT=30000

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Backup configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We're currently updating our store. Please check back soon!"

# =============================================================================
# CUSTOM GODSPEED SETTINGS
# =============================================================================

# Store-specific settings
STORE_NAME="Godspeed E-Bikes"
STORE_DESCRIPTION="Premium e-bikes for urban mobility"
STORE_CONTACT_EMAIL=info@godspeed.ch
STORE_CONTACT_PHONE="+41 44 123 45 67"
STORE_ADDRESS="Bahnhofstrasse 15, 8001 ZÃ¼rich, Switzerland"

# Business hours (for booking system)
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=19:00
BUSINESS_DAYS=1,2,3,4,5,6

# Inventory management
INVENTORY_SYNC_ENABLED=true
INVENTORY_SYNC_INTERVAL=3600
LOW_STOCK_THRESHOLD=5

# Pricing configuration
PRICE_INCLUDES_TAX=true
TAX_RATE=0.077
DISPLAY_CURRENCY_SYMBOL=CHF

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit the actual .env file to version control
# 2. Keep this .env.example file up to date with new variables
# 3. Use strong, unique passwords and API keys
# 4. Rotate API keys regularly for security
# 5. Test all integrations in development before production
# 6. Monitor API usage to avoid rate limiting
# 7. Set appropriate timeout values for your use case
# 8. Use environment-specific values (dev/staging/prod)